---
import Layout from '~layouts/Layout.astro'
import Quotes from '~components/Quotes.astro'
import Laptop from '~components/Laptop.astro'

// import {GoogleFontsOptimizer} from 'astro-google-fonts-optimizer'
// https://dev.to/ringmaster/build-a-random-quote-machine-with-svelte-and-parcel-4l4c
// https://gist.github.com/blacksector/2ef094ff9035b12db7f25d14bac9f465
---

<Layout>
  <Laptop />
  <div>
    <header>
      <h1>digitalcanvas</h1>
    </header>
    <Quotes />
    <footer class="unsplash">
      <a
        href="https://unsplash.com/@alesnesetril?utm_medium=referral&utm_campaign=photographer-credit&utm_content=creditBadge"
        target="_blank"
        rel="noopener noreferrer"
        title="Download free do whatever you want high-resolution photos from Ales Nesetril">
        <span class="svg">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32">
            <title>unsplash-logo</title>
            <path d="M10 9V0h12v9H10zm12 5h10v18H0V14h10v9h12v-9z"></path>
          </svg>
        </span>
        <span class="credits">Ales Nesetril</span>
      </a>
    </footer>
  </div>
</Layout>
