{
  "compilerOptions": {
    "types": ["astro/client"],
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "~components/*": ["src/components/*"],
      "~layouts/*": ["src/layouts/*"],
      "~assets/*": ["src/assets/*"],
      "~pages/*": ["src/pages/*"],
      "~/*": ["*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*", ".vscode", "dist"]
}
